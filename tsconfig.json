{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "strict": false,

    "declaration": false,

    "types": ["node"]
  },
  "include": ["src"]
}
